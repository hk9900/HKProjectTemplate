*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.py text eol=lf
*.rb text eol=lf

# Force CRLF line endings for Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf

